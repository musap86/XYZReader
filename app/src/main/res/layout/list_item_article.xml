<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/article_list_margin"
    android:elevation="@dimen/article_list_card_elevation"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/article_list_card_image_height"
            android:background="@color/photo_placeholder"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/article_titles_vertical_padding"
            android:paddingLeft="@dimen/article_titles_horizontal_padding"
            android:paddingRight="@dimen/article_titles_horizontal_padding"
            android:paddingTop="@dimen/article_titles_vertical_padding"
            android:textColor="@color/color_text_card_title" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/article_titles_vertical_padding"
            android:paddingLeft="@dimen/article_titles_horizontal_padding"
            android:paddingRight="@dimen/article_titles_horizontal_padding"
            android:textColor="@color/color_text_card_subtitle"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
